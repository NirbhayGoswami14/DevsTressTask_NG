    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_addlocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/ic_baseline_add_24"
        android:text="Add"
        tools:ignore="MissingConstraints"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="10dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="10dp"
        app:layout_constraintEnd_toStartOf="@id/btn_showroute"/>
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_showroute"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/ic_baseline_route_24"
        android:text="Route"
        tools:ignore="MissingConstraints"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="10dp"
        app:layout_constraintStart_toEndOf="@id/btn_addlocation"
        app:layout_constraintEnd_toStartOf="@id/btn_short"/>
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_short"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="A-z"
        tools:ignore="MissingConstraints"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="10dp"
        app:layout_constraintStart_toEndOf="@id/btn_showroute"
        app:layout_constraintEnd_toEndOf="parent"/>
